#!/bin/bash

# Update package list
sudo apt update

# Install Nginx
sudo apt install -y nginx

# Create a basic HTML page with "Hello World!"
echo "<html><head><title>Hello World!</title></head><body><p>Hello World!</p></body></html>" | sudo tee /var/www/html/index.html

# Configure Nginx to serve the page
echo "server {
    listen 80;
    server_name _;
    location / {
        root /var/www/html;
        index index.html;
    }
}" | sudo tee /etc/nginx/sites-available/default

# Restart Nginx
sudo /etc/init.d/nginx restart

echo "Nginx installation and configuration completed. Server is now listening on port 80."
